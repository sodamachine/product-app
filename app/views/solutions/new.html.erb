<%= form_for(@solution) do |f|%>
    <%=f.label "Issue"%>
    <%=f.text_field(:issue)%>
    <%=f.label "Ingredient"%>
    <%=f.text_field(:ingredient)%>
    <%=f.label "Description"%>
    <%=f.text_area(:description)%>
    <%=f.label "Product"%>
    <%=f.collection_select(:product_id, @products, :id, :name) %>
    <%=f.submit("Save")%>
  <%end%>