<%if @product%>
  <h3><%=@product.name%> (<%=@product.brand%>)</h3>
<%end%>

<%=render partial: "application/errors", locals: {errors: @errors} %>
<br>
<br>
<%= form_for @solution do |f|%>
    <%=f.label "Issue"%>
    <%=f.text_field(:issue)%>
    <%=f.label "Ingredient"%>
    <%=f.text_field(:ingredient)%>
    <%=f.label "Description"%>
    <%=f.text_area(:description)%>
    <%if !@product%>
      <%=f.label "Product"%>
      <%=f.collection_select(:product_id, @products, :id, :name) %>
    <%end%>
    <%=f.submit("Save")%>
  <%end%>