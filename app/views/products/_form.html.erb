<%=form_for @product do |f| %>
    <%=f.label "Product Name:" %>
    <%=f.text_field :name %>
    <%=f.label "Brand:" %>
    <%=f.text_field :brand %><br><br>
    <%=f.label "Solutions:" %><br>
    <%=f.fields_for :solutions do |s| %>
        <%=s.label "Issue:" %>
        <%=s.text_field :issue %>
        <%=s.label "Ingredient:" %>
        <%=s.text_field :ingredient %>
        <%=s.label "Description:" %>
        <%=s.text_area :description%>
    <%end%>
    <%=f.submit "Save" %>
<%end%>